Package: svgedit
Title: Insert Graphs, Images and Text in SVG Files
Version: 0.0.1
Authors@R: 
  person(
    "Daniel",
    "Thedie",
    email = "daniel.thedie@ed.ac.uk",
    role = c("aut", "cre", "cph"),
    comment = c(ORCID = "0000-0002-1352-7245")
